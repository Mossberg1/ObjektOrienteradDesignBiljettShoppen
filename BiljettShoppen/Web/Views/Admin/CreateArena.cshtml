@{
    ViewData["Title"] = "Skapa arena";
}

<div class="container mt-4">
    <h1 class="mb-4">Skapa arena</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-controller="Admin" asp-action="CreateArena" method="post" class="row g-3">
                @Html.AntiForgeryToken()

                <div class="col-12">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>

                <div class="col-12 col-md-6">
                    <label for="Name" class="form-label">Namn</label>
                    <input type="text" id="Name" name="Name" class="form-control" placeholder="T.ex. Tegelbyggnaden" required />
                </div>

                <div class="col-12 col-md-6">
                    <label for="Address" class="form-label">Adress</label>
                    <input type="text" id="Address" name="Address" class="form-control" placeholder="Gatuadress, postnummer och stad" required />
                </div>

                <div class="col-6 col-md-3 d-flex align-items-center">
                    <div class="form-check mt-2">
                        <input class="form-check-input" type="checkbox" id="Indoors" name="Indoors" value="true" />
                        <label class="form-check-label" for="Indoors">Inomhus</label>
                    </div>
                </div>

                <div class="col-12 d-flex justify-content-start mt-3">
                    <button type="submit" class="btn btn-primary">Skapa arena</button>
                    <a asp-controller="Admin" asp-action="BrowseArena" class="btn btn-secondary ms-2">Avbryt</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // simple client-side guard for non-negative numbers
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('input[type="number"]').forEach(el => {
                el.addEventListener('input', () => {
                    if (el.value !== '' && Number(el.value) < 0) el.value = 0;
                });
            });
        });
    </script>
}
